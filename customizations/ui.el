;; Load theme
(load-theme 'zenburn t)

;; Show line numbers
(global-linum-mode)

;; Rainbow !
(rainbow-delimiters-mode)

;; Show column number
(column-number-mode)

;; Hide menubar
(menu-bar-mode -1)

;; Hide toolbar
(tool-bar-mode -1)

;; Highlights matching parenthesis
(show-paren-mode)

;; Highlights current line
(global-hl-line-mode)

;; Cursor box
(set-default 'cursor-type 'box)

;; No cursor blinking, it's distracting
(blink-cursor-mode 0)
